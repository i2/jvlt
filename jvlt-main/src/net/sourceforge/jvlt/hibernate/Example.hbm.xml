<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="net.sourceforge.jvlt.hibernate.Example" table="EXAMPLES">
		<id name="id" column="EXAMPLE_ID">
			<generator class="native"/>
		</id>
		<property name="translation"/>
		<list name="textFragments" table="EXAMPLE_TEXTFRAGMENTS">
		    <key column="EXAMPLE_ID"/>
		    <list-index/>
		    <many-to-many
				column="TEXTFRAGMENT_ID"
				unique="true"
				class="net.sourceforge.jvlt.hibernate.Example$TextFragment"/>
		</list>
	</class>
	<class name="net.sourceforge.jvlt.hibernate.Example$TextFragment"
		table="TEXTFRAGMENTS">
        <id name="id" column="TEXTFRAGMENT_ID">
            <generator class="native"/>
        </id>
        <property name="text"/>
        <many-to-one name="sense" class="net.sourceforge.jvlt.hibernate.Sense"
        	column="SENSE_ID"/>
	</class>
</hibernate-mapping>


<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="net.sourceforge.jvlt.hibernate.Dict" table="DICT">
		<id name="id" column="DICT_ID">
			<generator class="native"/>
		</id>
        <property name="language"/>
		<set name="entries" table="DICT_ENTRIES">
		    <key column="DICT_ID"/>
		    <many-to-many
				column="ENTRY_ID"
				unique="true"
				class="net.sourceforge.jvlt.hibernate.Entry"/>
		</set>
		<set name="examples" table="DICT_EXAMPLES">
		    <key column="DICT_ID"/>
		    <many-to-many
				column="EXAMPLE_ID"
				unique="true"
				class="net.sourceforge.jvlt.hibernate.Example"/>
		</set>
	</class>
</hibernate-mapping>


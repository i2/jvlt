<?xml version="1.0"?>
<schema lang="english">
	<class name="noun"/>
	<attribute name="plural" classes="noun"/>

	<class name="verb"/>
	<class name="phrasalverb" extends="verb"/>
	<attribute name="pastt" classes="verb" group="conjugation"/>
	<attribute name="pastp" classes="verb" group="conjugation"/>
	
	<class name="adjective"/>
	<class name="adverb"/>
	<attribute name="comparative" classes="adjective;adverb" group="comparison"/>
	<attribute name="superlative" classes="adjective;adverb" group="comparison"/>

	<class name="conjunction"/>
</schema>

